@model IEnumerable<Fargoline.Models.Contenedor>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center">Listado de Contenedores - Fargoline</h2>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-12 text-center">
            @Html.ActionLink("Nuevo Contenedor", "Create", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NumeroContenedor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TipoContenedor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TamañoContenedor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PesoContenedor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TaraContenedor)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumeroContenedor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoContenedor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TamañoContenedor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PesoContenedor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TaraContenedor)
                            </td>
                            <td>
                                @Html.ActionLink("Modificar", "Edit", new { NumeroContenedor = item.NumeroContenedor }, new { @class = "btn btn-success" }) |
                                @Html.ActionLink("Ver detalle", "Details", new { NumeroContenedor = item.NumeroContenedor }, new { @class = "btn btn-info" }) |
                                @Html.ActionLink("Eliminar", "Delete", new { NumeroContenedor = item.NumeroContenedor }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
